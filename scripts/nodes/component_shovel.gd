func dig() -> void:
	if polygon == null: return
	var global_poly : Array[Vector2] = []
	for point : Vector2 in polygon.polygon:
		global_poly.append(
			point.rotated(rotation) + global_position
		)
	Relay.dig(PackedVector2Array(global_poly))

